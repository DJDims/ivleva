<!DOCTYPE html>
<html>
<head>
  <%- include('../parts/head'); %>
</head>
<body>
  <%- include('../parts/header'); %>

	<form action="/companies/<%= data.id %>?_method=PUT" method="POST">
		<div class="card border-primary mb-3" style="min-width: 25rem;">
			<div class="card-header">Edit company <%= data.title %> </div>
			<div class="card-body">

				<div class="form-group">
					<label class="col-form-label" for="categoryName">Company name</label>
					<input type="text" class="form-control" placeholder="Company name" id="companyName" name="title" value="<%= data.title %> " required>
				</div>
				<div class="form-group">
					<input type="number" class="form-control d-none" name="id" value="<%= data.id %> ">
				</div>
				<div class="form-group">
					<input type="hidden" name="_method" value="PUT">
				</div>
				<div class="d-flex justify-content-center">
					<button type="submit" class="btn btn-primary mt-3">Edit company</button>
				</div>
			</div>
		</div>
	</form>
  <%- include('../parts/footer'); %>
</body>
</html>