<!DOCTYPE html>
<html>

<head>
    <%- include('../parts/head'); %>
</head>

<body>
    <%- include('../parts/header'); %>

    <form action="/games/" method="POST">
        <div>
            <div class="card-group">
                <div class="card border-primary mb-3" style="min-width: 25rem;">
                    <div class="card-header">Add game</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="col-form-label" for="title">Game title</label>
                            <input type="text" class="form-control" placeholder="Title" id="title" name="title">
                        </div>
                        <div class="form-group">
                            <label class="col-form-label" for="publishYear">Publish year</label>
                            <input type="number" min="1970" max="2023" value="2000" class="form-control" placeholder="Publish year" id="publishYear" name="publishYear">
                        </div>
                        <div class="form-group">
                            <label class="col-form-label" for="poster">Poster</label>
                            <input type="text" class="form-control" placeholder="Poster" id="poster" name="poster">
                        </div>
                        <div class="form-group">
                            <label class="col-form-label" for="description">Description</label>
                            <textarea type="text area" class="form-control" placeholder="Description" id="description" name="description"></textarea>
                        </div>
                    </div>
                </div>
                <div class="card border-primary mb-3" style="min-width: 30rem;">
                    <div class="card-header">Â </div>
                    <div class="card-body">
                        <p class="mb-1">Add companies</p>
                        <div class="form-group mb-3" style="display: flex; flex-direction: row;">
                            <div style="width: 50%; display: flex; flex-direction: column;">
                                <select style="height: 150px;" id="companiesBase" multiple>
                                    <% for (let i = 0; i < companies.length; i++) { %>
                                        <option value="<%= i %>"><%= companies[i].title %> </option>
                                    <% } %>
                                </select>
                                <button type="button" class="btn btn-primary mx-2 mt-2" onclick="addCompaniesToGame()">Add--&#62</button>
                            </div>
                            <div style="width: 50%; display: flex; flex-direction: column;">
                                <select name="companies" style="height: 150px;" id="companiesThis" multiple>
                                </select>
                                <button type="button" class="btn btn-danger mx-2 mt-2" onclick="removeCompaniesFromGame()">&#60--Remove</button>
                            </div>
                        </div>
                        <p class="mb-1">Add categories</p>
                        <div class="form-group" style="display: flex; flex-direction: row;">
                            <div style="width: 50%; display: flex; flex-direction: column;">
                                <select style="height: 150px;" id="categoriesBase" multiple>
                                    <% for (let i = 0; i < categories.length; i++) { %>
                                        <option value="<%= i %>"><%= categories[i].title %> </option>
                                    <% } %>
                                </select>
                                <button type="button" class="btn btn-primary mx-2 mt-2" onclick="addCategoriesToGame()">Add--&#62</button>
                            </div>
                            <div style="width: 50%; display: flex; flex-direction: column;">
                                <select name="categories" style="height: 150px;" id="categoriesThis" multiple>
                                </select>
                                <button type="button" class="btn btn-danger mx-2 mt-2" onclick="removeCategoriesFromGame()">&#60--Remove</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary mt-1">Add game</button>
            </div>
        </div>
    </form>
    
    <%- include('../parts/footer'); %>

    <script src="../../Logic/GameLogic.js"></script>
</body>

</html>