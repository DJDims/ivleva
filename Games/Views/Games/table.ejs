<!DOCTYPE html>
<html>
<head>
    <%- include('../parts/head'); %>
</head>
<body>
    <%- include('../parts/header'); %>

<div style="width: 100%;">
    <a href="views/showAddGame" class="btn btn-primary" class="mb-2">Add new</a>
    <table class="table table-hover">
        <thead>
            <tr>
            <th width="5%" scope="col">â„–</th>
            <th width="10%" scope="col">Title</th>
            <th width="10%" scope="col">Publish Year</th>
            <!-- <th width="55%" scope="col">Description</th> -->
            <th width="20%" scope="col">Manage</th>
            </tr>
        </thead>
        <tbody>
            <% games.forEach(element => { %>
                <tr>
                    <th scope="row"><%= element.id %></th>
                    <td><%= element.title %></td>
                    <td><%= element.publishYear %></td>
                    <!-- <td><%= element.description %></td> -->
                    <td><button type="button" class="btn btn-warning mx-2">Edit</button><a href="/views/showDeleteGame/<%= element.id %>" class="btn btn-danger">Delete</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('../parts/footer'); %>
</body>
</html>