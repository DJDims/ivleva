<!DOCTYPE html>
<html>
<head>
    <%- include('../parts/head'); %>
</head>
<body>
    <%- include('../parts/header'); %>

<div style="width: 100%;">
    <div class="d-flex flex-row justify-content-between" style="width: 70%;">
        <a href="views/showAddGame" class="btn btn-primary" class="mb-2">Add new</a>
        <p>Total: <%= total %> games</p>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
            <th width="5%" scope="col">â„–</th>
            <th width="10%" scope="col">Title</th>
            <th width="10%" scope="col">Publish Year</th>
            <th width="20%" scope="col">Manage</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < games.length; i++) { %>
                <tr>
                    <th scope="row"><%= i+1 %></th>
                    <td><a href="/games/<%= games[i].id %>"><%= games[i].title %></a></td>
                    <td><a href="/views/showGamesByYear/<%= games[i].publishYear %>"><%= games[i].publishYear %></a></td>
                    <td>
                        <a href="/views/showEditGame/<%= games[i].id %>" class="btn btn-warning">Edit</a>
                        <a href="/views/showDeleteGame/<%= games[i].id %>" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            <% }; %>
        </tbody>
    </table>
</div>

<%- include('../parts/footer'); %>
</body>
</html>