</head>
<body>
  	<%- include('../parts/header'); %>

	<form action="/platforms/" method="POST">
		<div class="card border-primary mb-3" style="min-width: 25rem;">
			<div class="card-header">Add platform</div>
			<div class="card-body">

				<div class="form-group">
					<label class="col-form-label" for="platformName">Platform name</label>
					<input type="text" class="form-control" placeholder="Platform name" id="platformName" name="title" required>
				</div>
				<div class="d-flex justify-content-center">
					<button type="submit" class="btn btn-primary mt-3">Add platform</button>
				</div>
			</div>
		</div>
	</form>
