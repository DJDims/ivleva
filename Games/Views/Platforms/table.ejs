<!DOCTYPE html>
<html>
<head>
  <%- include('../parts/head'); %>
</head>
<body>
  <%- include('../parts/header'); %>

    <div style="width: 100%;">
		<div class="d-flex flex-row justify-content-between" style="width: 70%;">
			<a href="views/showAddPlatform" class="btn btn-primary" class="mb-2">Add new</a>
			<p>Total: <%= total %> platforms</p>
		</div>
        <table class="table table-hover">
            <thead>
                <tr>
                <th scope="col">â„–</th>
                <th scope="col">Title</th>
                <th scope="col">Manage</th>
                </tr>
            </thead>
            <tbody>
            <% for (let i = 0; i < platforms.length; i++) { %>
                    <tr>
                        <th scope="row"><%= i+1 %></th>
                        <td><a href="/platforms/<%= platforms[i].id %>"><%= platforms[i].title %></a></td>
                        <td>
                          	<a href="/views/showEditPlatform/<%= platforms[i].id %>" class="btn btn-warning">Edit</a>
							<a href="/views/showDeletePlatform/<%= platforms[i].id %>" class="btn btn-danger">Delete</a>
						</td>
                    </tr>
                <% }; %>
            </tbody>
        </table>
    </div>

  <%- include('../parts/footer'); %>
</body>
</html>